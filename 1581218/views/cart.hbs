<!-- Cart -->
<!-- Process Steps -->
    <div class="container my-5">
        <ul class="steps">
            <li class="active"><a href="/cart">Cart</a></li>
            <li><a href="/cart/checkout">Shipping Address</a></li>
            <li><a href="#">Payment</a></li>
        </ul>
    </div>
<div class="container mb-4">
    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col"> </th>
                            <th scope="col">Product</th>
                            <th scope="col">Unit Price</th>
                            <th scope="col" class="text-center">Quantity</th>
                            <th scope="col" class="text-right">Unit Cost</th>
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each items}}  <!-- item, quantity, price -->
                        <form class="form-cart-item-update" data-id="{{item.id}}">
                        <tr>
                            <td><img src="{{item.imagepath}}" style="width:50px; height:50px" /> </td>
                            <td>{{item.name}}</td>
                            <td>{{item.price}}</td>
                            <td>
                                <input id="quantity{{item.id}}" class="form-control" type="number" min="1" max="10" required="" value="{{quantity}}" />
                            </td>
                            <td class="text-right">${{price}}</td>
                            <td class="text-right">
                                <button type="submit" class="btn btn-sm btn-success" ><i class="fa fa-check">Edit</i> </button>
                                <button class="btn btn-sm btn-danger btn-cart-remove" data-id="{{item.id}}">Remove<i class="fa fa-trash"></i> </button>
                            </td>
                        </tr>
                        </form>
                        {{/each}}
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            
                            <td class="text-right h6">Total Cost</td>
                            <td class="text-right h6">${{totalPrice}}</td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col mb-2">
            <div class="row">
                <div class="col-sm-12  col-md-6">
                    <a href="/" class="btn btn-block btn-light">Continue Shopping</a>
                </div>
                <div class="col-sm-12 col-md-6 text-right">
                    <a href="/cart/checkout" class="btn btn-lg btn-block btn-success text-uppercase">Checkout</a>
                </div>
            </div>
        </div>
    </div>
</div>